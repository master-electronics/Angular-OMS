import { Injectable } from '@angular/core';
import { Resolve } from '@angular/router';
import { catchError, of } from 'rxjs';
import { UserPullInfoService } from '../../data/user-pull-info';

@Injectable()
export class MenuResolver implements Resolve<any> {
  constructor(private _userPullInfo: UserPullInfoService) {}
  resolve() {
    return this._userPullInfo.getUserPullInfo$().pipe(
      catchError((error) => {
        return of({ error });
      })
    );
  }
}
